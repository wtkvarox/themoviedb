<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    <ImageView
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/drawer_header_background"
            android:layout_width="wrap_content"
            android:layout_height="300dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="@dimen/margin_default"
            android:layout_above="@+id/txt_name_profile"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/william_oviedo_profile"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white" android:layout_marginTop="@dimen/margin_default"/>

    <TextView
            android:paddingStart="@dimen/padding_default"
            android:textColor="@color/white"
            android:textSize="@dimen/text_mayus"
            android:layout_above="@+id/txt_date_profile"
            android:id="@+id/txt_name_profile"
            android:text="William Oviedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:paddingStart="@dimen/padding_default"
            android:paddingBottom="@dimen/padding_default"
            android:textColor="@color/white"
            android:textSize="@dimen/text_mayus"
            android:id="@+id/txt_date_profile"
            android:layout_alignParentBottom="true"
            android:text="Miembro desde: Abril 04, 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>